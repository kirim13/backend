generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String         @id @default(cuid())
  firstName      String
  lastName       String
  email          String         @unique
  password       String
  passwordMatch  Boolean        @default(false)
  createdAt      DateTime       @default(now())
  appearanceMode AppearanceMode @default(LIGHT)
  pets           Pet[]
}

model Pet {
  id             String   @id @default(cuid())
  firstName      String
  lastName       String
  breed          String
  type           Type
  birthday       String
  gotchaDate     String
  active         Boolean  @default(true)
  primaryOwnerId String?
  primaryOwner   User?     @relation(fields: [primaryOwnerId], references: [id], onDelete: Cascade)
  registeredMedicine RegisteredMedicine[]
}

model Medicine { 
  id String @id @default(cuid())
  name String 
  unit String 
  notes Boolean @default(false)
  photos Boolean @default(false)
  createdAt DateTime @default(now())
  medicineDosages MedicineDetails[]
}

model MedicineDetails { 
  id String @id @default(cuid())
  dosageQuantity Int
  dosageUnit String 
  frequencyQuantity Int
  frequencyUnit String 
  hour Int
  minute Int
  timeOfDay TimeOfDay
  medicineId String? 
  medicine Medicine? @relation(fields: [medicineId], references: [id], onDelete: Cascade)
  registeredMedicine RegisteredMedicine[]
}

model RegisteredMedicine {
  id String @id @default(cuid())
  petId String?
  pet Pet? @relation(fields: [petId], references: [id], onDelete: Cascade)
  medicineDetailsId String? 
  medicineDetails MedicineDetails? @relation(fields: [medicineDetailsId], references: [id], onDelete: Cascade)
}

enum AppearanceMode {
  LIGHT
  DARK
}

enum Type {
  CAT
  DOG
}

enum TimeOfDay {
  AM 
  PM
}
